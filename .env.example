# ===================================
# Rastasafari Experience - Variables d'environnement
# ===================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ===================================
# Supabase
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===================================
# Database Connection (for Prisma)
# ===================================
# Pooled connection string (for serverless environments)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection string (for migrations and schema changes)
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# ===================================
# Stripe
# ===================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ===================================
# NextAuth (pour authentification future)
# ===================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# ===================================
# Email (optionnel)
# ===================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@rastasafari.com
